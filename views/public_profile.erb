<html>
<head>
	<meta charset="UTF-8">
	<title> Public Profile</title>
</head>
<body>
	<div class="overlay">
		<div class="login_signup">
				<ul>
					<li><a href="/profile">Profile</a></li>
					<li>or</li>
					<li><a href="/logout">Log Out</a></li>
			    </ul>	
		</div>
	<div class="content">
	    <h2> Haikus by <%= @user.first_name %> </h2>
	          <% if @poems.empty? %>
	               <h2> No Haikus.  Yet.
	               </h2>

	          <% else %>

	               <h3> 
	               	  Latest Haikus
	               </h3>
	               <br>
	                     <% @num = 1 %>
	                          <% @poems.each do |poem| %>
								    <ul class="list_of_poems">
										 <li> 
										 	<u> 
										 	     <div class="poem_entry">
										 		 <%= @num %>) <%= poem.title %>	  	
										 		 </div>	
										     </u>  
										   </li>
									 </ul>	
							 <% @num += 1 %>
							   <% if @num > 20 %>
							        <% break %>
						       <% end %>
						<% end %> 
	          <% end %>
	</div>
  </div>
</body>
</html>